#!groovy

properties([
    // H allow predefined but random minute see https://en.wikipedia.org/wiki/Cron#Non-standard_characters
    pipelineTriggers([cron('H 05 * * *')])
])

@Library("Infrastructure@ccd-1257")

def type = "java"
def product = "ccd"
def component = "user-profile-api"

def secrets = [
    's2s-${env}': [
        secret('microservicekey-ccd-data', 'CCD_DS_SERVICE_SECRET')
    ]
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
    [ $class: 'AzureKeyVaultSecret',
      secretType: 'Secret',
      name: secretName,
      version: '',
      envVariable: envVar
    ]
}

//env.FORTIFY_EXCLUDE_PATTERN = "*.jar|*.zip|*.tar"
//env.FORTIFY_SEVERITY = "HIGH"
env.FORTIFY_RELEASE_ID = "65430"

withNightlyPipeline(type, product, component) {
    loadVaultSecrets(secrets)
    enableMutationTest()
    enableDbMigration('ccd')
    enableSlackNotifications('#ccd-nightly-builds')
}
